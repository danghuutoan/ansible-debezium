{
    "name": "{{sink_name.stdout}}-sink",
    "config": {
        "connector.class": "io.confluent.connect.jdbc.JdbcSinkConnector",
        "tasks.max": "3",
        "topics": "{% for topic in item.topics %}{{topic}}{% if not loop.last %}, {% endif %}{% endfor %}",
        "connection.url": "jdbc:{{item.db_type}}://{{item.host}}:{{item.port}}/{{item.dbname}}?user={{item.username}}&password={{item.password}}",
        "transforms": "unwrap,tsConverter",
        "transforms.unwrap.type": "com.github.cjmatta.kafka.connect.smt.ExtractNewRecordState",
        "transforms.unwrap.drop.tombstones": "false",
        "transforms.unwrap.delete.handling.mode":"rewrite",
        "transforms.unwrap.add.fields": "source.ts_ms",
        "transforms.tsConverter.type": "org.apache.kafka.connect.transforms.TimestampConverter$Value",
        "transforms.tsConverter.field": "__source_ts_ms",
        "transforms.tsConverter.format": "yyyy-MM-dd'T'HH:mm:ss.SSSXXX",
        "transforms.tsConverter.target.type": "Timestamp",
        "auto.create": "true",
        "auto.evolve": "true",
        "insert.mode": "upsert",
        "delete.enabled": "true",
        "pk.mode": "record_key",
        "database.history.kafka.bootstrap.servers": "{% for server in kafka.bootstrap_servers %}{{server}}{% if not loop.last %}, {% endif %}{% endfor %}",
        "database.history.kafka.topic": "schema-changes.{{item.dbname}}",
        "key.converter": "io.confluent.connect.avro.AvroConverter",
        "value.converter": "io.confluent.connect.avro.AvroConverter",
        "key.converter.schema.registry.url": "{% for url in schema_registry.url %}{{url}}{% if not loop.last %}, {% endif %}{% endfor %}",
        "value.converter.schema.registry.url": "{% for url in schema_registry.url %}{{url}}{% if not loop.last %}, {% endif %}{% endfor %}"
    }
}