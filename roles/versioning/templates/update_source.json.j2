{
    "connector.class": "io.debezium.connector.postgresql.PostgresConnector",
    "tasks.max": "1",
    "database.hostname": "{{item.host}}",
    "database.port": "{{item.port}}",
    "database.user": "{{item.username}}",
    "database.password": "{{item.password}}",
    "database.dbname": "{{item.dbname}}",
    "database.server.name": "{{item.sink_dbname}}",
    "schema.include.list": "{{item.schema}}",
    "table.include.list": "{% for table in item.include_tables %}{{item.schema}}.{{table}}{% if not loop.last %}, {% endif %}{% endfor %}",
    "database.history.kafka.bootstrap.servers": "{% for server in kafka.bootstrap_servers %}{{server}}{% if not loop.last %}, {% endif %}{% endfor %}",
    "key.converter": "io.confluent.connect.avro.AvroConverter",
    "value.converter": "io.confluent.connect.avro.AvroConverter",
    "key.converter.schema.registry.url": "{% for url in schema_registry.url %}{{url}}{% if not loop.last %}, {% endif %}{% endfor %}",
    "value.converter.schema.registry.url": "{% for url in schema_registry.url %}{{url}}{% if not loop.last %}, {% endif %}{% endfor %}",
    "topic.creation.default.replication.factor": 1,  
    "topic.creation.default.partitions": 10,
    "plugin.name":"wal2json",
    "slot.name": "wal2json",
    "snapshot.mode": "never",
    "time.precision.mode":"connect",
    "tombstones.on.delete": "false"
}
